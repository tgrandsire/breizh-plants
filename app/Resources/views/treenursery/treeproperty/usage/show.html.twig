{% extends 'base.html.twig' %}

{% block body %}
    <h1>Usage</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ usage.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ usage.name }}</td>
            </tr>
            <tr>
                <th>Deletedat</th>
                <td>{% if usage.deletedAt %}{{ usage.deletedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('treenursery_usages_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('treenursery_usages_edit', { 'id': usage.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
