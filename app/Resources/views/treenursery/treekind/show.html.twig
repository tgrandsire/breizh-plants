{% extends 'base.html.twig' %}

{% block body %}
    <h1>Treekind</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ treeKind.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ treeKind.name }}</td>
            </tr>
            <tr>
                <th>Deletedat</th>
